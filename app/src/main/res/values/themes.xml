<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WorkoutTimer" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_light</item>
        <item name="colorSecondaryVariant">@color/primary_color</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>
    
    <!-- NoActionBar theme for MainActivity -->
    <style name="Theme.WorkoutTimer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Timer display text style -->
    <style name="TimerTextStyle">
        <item name="android:textSize">72sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:letterSpacing">0.1</item>
    </style>
    
    <!-- Stage name text style -->
    <style name="StageTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Parameter text style -->
    <style name="ParameterTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Button style -->
    <style name="TimerButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">120dp</item>
    </style>
    
    <!-- Secondary button style -->
    <style name="SecondaryButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="strokeColor">@color/primary_color</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">80dp</item>
    </style>
    
    <!-- Card style -->
    <style name="WorkoutCardStyle" parent="Widget.Material3.Card">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    
    <!-- Progress bar style -->
    <style name="WorkoutProgressStyle" parent="Widget.Material3.ProgressBar">
        <item name="android:progressTint">@color/primary_color</item>
        <item name="android:progressBackgroundTint">@color/progress_background</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
    </style>

    <!-- Type chip style -->
    <style name="TypeChipStyle" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/surface</item>
        <item name="chipStrokeColor">@color/primary_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="checkedIconTint">@color/primary_color</item>
        <item name="checkedIconVisible">true</item>
    </style>

    <!-- Filter chip style -->
    <style name="FilterChipStyle" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/surface</item>
        <item name="chipStrokeColor">@color/outline</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="checkedIconTint">@color/primary_color</item>
        <item name="checkedIconVisible">true</item>
    </style>
</resources>