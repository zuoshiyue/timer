<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 阶段标题栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_stage_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="阶段 1"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete_stage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                style="@style/SecondaryButtonStyle"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- 阶段名称 -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:startIconDrawable="@drawable/ic_stage">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_stage_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="阶段名称"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 阶段类型 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="阶段类型"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_stage_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="训练"
                style="@style/TypeChipStyle" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_rest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="休息"
                style="@style/TypeChipStyle" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_warmup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热身"
                style="@style/TypeChipStyle" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_cooldown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="放松"
                style="@style/TypeChipStyle" />

        </com.google.android.material.chip.ChipGroup>

        <!-- 阶段时长 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="阶段时长（秒）"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_stage_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:valueFrom="10"
            android:valueTo="600"
            android:value="60"
            android:stepSize="10" />

        <TextView
            android:id="@+id/tv_stage_duration_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="60秒"
            android:textAlignment="center"
            android:layout_marginBottom="12dp" />

        <!-- 重复次数 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="重复次数"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_decrease_repeats"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                style="@style/SecondaryButtonStyle"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_repeats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:textSize="16sp"
                android:textAlignment="center" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_increase_repeats"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                style="@style/SecondaryButtonStyle"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>