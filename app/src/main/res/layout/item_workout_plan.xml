<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/WorkoutCardStyle"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 计划名称和类型 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/plan_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HIIT燃脂训练"
                style="@style/StageTextStyle" />

            <TextView
                android:id="@+id/plan_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIIT"
                android:background="@drawable/type_badge"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- 计划描述 -->
        <TextView
            android:id="@+id/plan_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="高强度间歇训练，包含4个阶段"
            style="@style/ParameterTextStyle"
            android:layout_marginBottom="8dp" />

        <!-- 训练时长和阶段数 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="space_between"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_time"
                    android:tint="@color/primary"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/plan_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30分钟"
                    style="@style/ParameterTextStyle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_stages"
                    android:tint="@color/primary"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/plan_stages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4阶段"
                    style="@style/ParameterTextStyle" />

            </LinearLayout>

        </LinearLayout>

        <!-- 操作按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_start_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始训练"
                style="@style/TimerButtonStyle"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                style="@style/SecondaryButtonStyle"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                style="@style/SecondaryButtonStyle" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>