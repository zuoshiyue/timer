<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="创建训练计划"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <!-- 计划名称 -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:startIconDrawable="@drawable/ic_title">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_plan_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="计划名称"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 计划描述 -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:startIconDrawable="@drawable/ic_description">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_plan_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="计划描述"
                android:maxLines="3" />

        </com.google.android.material.textfield.TextInputInputLayout>

        <!-- 训练类型 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="训练类型"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_simple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="简单"
                style="@style/TypeChipStyle" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_multi_stage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="多阶段"
                style="@style/TypeChipStyle" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_hiit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIIT"
                style="@style/TypeChipStyle" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_tabata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TABATA"
                style="@style/TypeChipStyle" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_bodyweight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自重"
                style="@style/TypeChipStyle" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_incline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="坡度"
                style="@style/TypeChipStyle" />

        </com.google.android.material.chip.ChipGroup>

        <!-- 训练时长 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="训练时长（分钟）"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:valueFrom="5"
            android:valueTo="120"
            android:value="30"
            android:stepSize="5" />

        <TextView
            android:id="@+id/tv_duration_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30分钟"
            android:textAlignment="center"
            android:layout_marginBottom="16dp" />

        <!-- 提醒设置 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提醒设置"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_sound"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="声音提醒"
                android:checked="true" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_vibration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="震动提醒"
                android:checked="true" />

        </LinearLayout>

        <!-- 按钮区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                style="@style/SecondaryButtonStyle"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存"
                style="@style/TimerButtonStyle" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>